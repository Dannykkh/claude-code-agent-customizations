{
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash hooks/save-conversation.sh \"$PROMPT\""
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "(?i)(task.*complete|작업.*완료|ULTRAWORK.*complete)",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[Session Logger] 작업 완료 알림'"
          }
        ]
      }
    ]
  },
  "_info": "Session Conversation Logger - 모든 대화를 .claude/conversations/에 저장"
}