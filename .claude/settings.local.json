{
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File hooks/save-conversation.ps1 \u0022$PROMPT\u0022"
          }
        ]
      },
      {
        "matcher": "(?i)^\\s*workpm",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File hooks/workpm-hook.ps1"
          }
        ]
      },
      {
        "matcher": "(?i)^\\s*pmworker",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File hooks/pmworker-hook.ps1"
          }
        ]
      }
    ],
    "Stop": []
  },
  "mcpServers": {
    "orchestrator": {
      "command": "node",
      "args": [
        "D:/git/claude-code-agent-customizations/mcp-servers/claude-orchestrator-mcp/dist/index.js"
      ],
      "env": {
        "ORCHESTRATOR_PROJECT_ROOT": "D:/git/claude-code-agent-customizations",
        "ORCHESTRATOR_WORKER_ID": "pm"
      }
    }
  }
}