{
  "mcpServers": {
    "orchestrator": {
      "command": "node",
      "args": [
        "D:/git/claude-code-agent-customizations/mcp-servers/claude-orchestrator-mcp/dist/index.js"
      ],
      "env": {
        "ORCHESTRATOR_PROJECT_ROOT": "D:/git/claude-code-agent-customizations",
        "ORCHESTRATOR_WORKER_ID": "pm"
      }
    }
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "(?i)^\\s*workpm",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File \"D:/git/claude-code-agent-customizations/hooks/workpm-hook.ps1\""
          }
        ]
      },
      {
        "matcher": "(?i)^\\s*pmworker",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File \"D:/git/claude-code-agent-customizations/hooks/pmworker-hook.ps1\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File \"D:/git/claude-code-agent-customizations/hooks/save-response.ps1\""
          }
        ]
      }
    ]
  }
}
